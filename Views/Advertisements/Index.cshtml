@using Lab4.Models
@model IEnumerable<Lab4.Models.Advertisement>

@{ ViewData["Title"] = "Index";
    Layout = "_Layout";
    var community = ViewData["community"] as IList<Community>;
    var testc = "hello";}

@foreach (var item in community)
{
<h1>Show ads for community @item.Title</h1>}

<p class ="upload">
    @*Get communityId from url Context.Request.RouteValues["id"]*@
    <a  asp-action="Upload" asp-route-id="@ViewData["communityID"]">Upload New</a>
</p>
<p> <a asp-controller="Communities" asp-action="Index">Back to List</a></p>

@if (Model.Count() == 0)
{
<p class="display">There are no files to display.</p> }
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fileName)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.fileName)
    </td>
    <td>
        <img src="@item.url" style="max-width: 400px;" />
    </td>
    <td>
        <a asp-action="Delete" asp-route-id="@item.advertisementId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>}