}



<h1>Delete add for community @ViewData["communityAds"]</h1>

<h4>Are you sure you want to delete this?</h4>
<div>
    <h5>Answer</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fileName)
