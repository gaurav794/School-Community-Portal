@model Lab4.Models.ViewModels.CommunityViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Enrollment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="EditMemberships" asp-route-id="@item.ID">Edit Memberships</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!--To display members of the community-->
@if (Model.Communities != null)
{



    <div class="studentCommunity">

        <h1>Member of the following communities</h1>

        <table class="table">
            <thead>
                <tr>
                    @if (Model.Communities.Count() > 0)
                    {


                        <th>
                            Name
                        </th>
                    }
                    else
                    {
                        <td>

                            <b>No membership record exist</b>
                        </td>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Communities)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}
